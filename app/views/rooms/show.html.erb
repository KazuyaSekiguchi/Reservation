 <h3>施設詳細</h3>
 
 <table>
   <tr>
     <th>施設画像</th>
     <td><%= image_tag @room.image %></td>
   </tr>
   <tr>
     <th>施設名</th>
     <td><%= @room.room_name %></td>
   </tr>
   <tr>
     <th>紹介文</th>
     <td><%= @room.introduction %></td>
   </tr>
   <tr>
     <th>料金</th>
     <td><%= @room.price %></td>
   </tr>
   <tr>
     <th>住所</th>
     <td><%= @room.address %></td>
   </tr>
 </table>
 
 <h3>予約登録</h3>
 
 <%= form_with model: @reservation, method: :post, url: reservation_confirm_path do |f| %>
   <table>
     <tr>
       <th><%= f.label :check_in ,"チェックイン日" %></th>
       <td><%= f.date_field :check_in %></td>
     </tr>
     <tr>
       <th><%= f.label :check_out ,"チェックアウト日" %></th>
       <td><%= f.date_field :check_out %></td>
     </tr>
     <tr>
       <th><%= f.label :number_of_people ,"人数" %></th>
       <td><%= f.text_field :number_of_people %></td>
     </tr>
   </table>
   <%= f.hidden_field :room_id, value: @room.id %>
  <div>
   <ul>
     <li><%= f.submit "予約確認画面へ"%></li>
     <li><%= link_to "戻る", :back %></li>
   </ul>
  </div>
 <% end %>